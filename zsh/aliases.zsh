# Comandos para kubernetes
alias k=kubectl
#alias kc=kubecolor

# Aliases para comando `ls`
alias ls="lsd -g"
alias l="ls"
alias ll="l -l"
alias lt="l --tree --depth 2"
alias llt="lt -lg"
alias la="ll -a"
alias lat="lt -al"

# Aliases para comando `cat`
alias cat="bat"

# Aliases para simplificar a digitação
alias v="nvim"
alias lg="lazygit"

# Aliases para comando `git`
alias g="git"
alias gc="git commit"
alias gc="git checkout"
alias ga="git add"

# Suffix extensions
alias -s txt=nvim
alias -s md=nvim
alias -s yaml=nvim
alias -s yml=nvim
alias -s json=nvim

